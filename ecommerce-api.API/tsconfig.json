{
  "compilerOptions": {
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
    "rootDir": "src",

    "strict": true,
    "skipLibCheck": true,
    "types": [],
    "moduleResolution": "Node16",
    "module": "Node16"
  },
  "exclude": ["node_modules/"],
  "include": ["src/**/*.ts", "test/**/*.ts"]
}